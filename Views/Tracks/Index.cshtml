@model IEnumerable<LockerRoomVibesCms.Models.TrackDto>

@{
    ViewData["Title"] = "Tracks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 fade-in">
        <h2><i class="fas fa-music me-2 text-primary"></i>Tracks Management</h2>
        <a asp-controller="Tracks" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add New Track
        </a>
    </div>

    <div class="card fade-in" style="animation-delay: 0.2s;">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Artist</th>
                            <th>Mood</th>
                            <th>Duration</th>
                            <th>Audio</th>
                            <th>Playlists</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var track in Model)
                        {
                            <tr>
                                <td><strong>@track.Title</strong></td>
                                <td>@track.Artist</td>
                                <td><span class="badge bg-secondary">@track.Mood</span></td>
                                <td class="track-duration">@TimeSpan.FromSeconds(track.DurationInSeconds).ToString("m\\:ss")</td>
                                <td>
                                    <audio controls>
                                        <source src="@track.AudioUrl" type="audio/mpeg" />
                                        Your browser does not support the audio element.
                                    </audio>
                                </td>
                                <td>
                                    <span class="badge bg-info" data-bs-toggle="tooltip" title="@string.Join(", ", track.PlaylistNames)">
                                        @track.PlaylistNames.Count @(track.PlaylistNames.Count == 1 ? "playlist" : "playlists")
                                    </span>
                                </td>

                                <td>
                                    <a asp-action="Details" asp-route-id="@track.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <button class="btn btn-sm btn-outline-warning me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editTrackModal"
                                            onclick="populateEditModal(@track.Id, '@track.Title', '@track.Artist', '@track.Mood', '@track.AudioUrl', @track.DurationInSeconds)">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <button class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteTrackModal"
                                            onclick="prepareDeleteModal(@track.Id, '@track.Title')">
                                        <i class="fas fa-trash"></i>
                                    </button>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_EditModal")
    @await Html.PartialAsync("_DeleteModal")

</div>
@section Scripts {
    <script src="~/js/track.js"></script>
}
