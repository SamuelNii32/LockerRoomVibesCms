@model PlaylistDetailsDto

@{
    ViewData["Title"] = "Playlist Details";
}

<div class="container">
    <div class="space-y-6">
        <!-- Header -->
        <div class="header space-x-4 d-flex align-items-center mb-4">
            <a class="btn btn-outline-secondary" onclick="history.back()">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="h3 mb-0">Playlist Details</h1>
        </div>

        <!-- Playlist Info -->
        <div class="card p-4 mb-4">
            <div class="d-flex align-items-start">
                <img src="@(Model.CoverImageUrl ?? "https://via.placeholder.com/200")" alt="Cover Image" class="rounded me-4" style="width: 200px; height: auto;" onerror="this.src='https://via.placeholder.com/192?text=♪'" />
                <div>
                    <h2 class="h4">@Model.Title</h2>
                    <p class="text-muted">@Model.TeamName</p>
                    <p>@Model.Description</p>
                    <div class="text-muted mb-2">
                        <span>@(Model.Tracks?.Count() ?? 0) tracks</span>


                        @{
                            var minutes = Model.TotalDurationInSeconds / 60;
                            var seconds = Model.TotalDurationInSeconds % 60;
                        }
                        <span class="ms-3">@($"{minutes}:{seconds:D2} total")</span>
                    </div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                </div>
            </div>
        </div>

        <!-- Tracks List -->
        <div class="card p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="h5 mb-0">Tracks</h3>
                <a asp-controller="PlaylistTracks" asp-action="Index" asp-route-playlistId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Add Tracks
                </a>

            </div>

            @if (Model.Tracks != null && Model.Tracks.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Artist</th>
                                <th>Mood</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Tracks.Count; i++)
                            {
                                var track = Model.Tracks[i];
                                var duration = TimeSpan.FromSeconds(track.DurationInSeconds);
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@track.Title</td>
                                    <td>@track.Artist</td>
                                    <td>@track.Mood</td>
                                    <td>@duration.Minutes:@duration.Seconds.ToString("D2")</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No tracks in this playlist yet.</div>
            }
        </div>
    </div>
</div>
